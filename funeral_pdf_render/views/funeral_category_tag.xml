<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="funeral_category_tag_view_form" model="ir.ui.view">
            <field name="name">funeral_category_tag_view_form</field>
            <field name="model">funeral.category.tag</field>
            <field name="arch" type="xml">
                <form string="funeral_category_tag_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="funeral_category_tag_view_tree" model="ir.ui.view">
            <field name="name">funeral_category_tag_view_tree</field>
            <field name="model">funeral.category.tag</field>
            <field name="arch" type="xml">
                <tree string="funeral_category_tag_tree">
                    <field name="name"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="funeral_category_tag_action" model="ir.actions.act_window">
            <field name="name">Category Tag</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">funeral.category.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_funeral_category_tag"
                  name="Category Type"
                  parent="funeral_manager.configuration_menu"
                  action="funeral_category_tag_action"/>

    </data>
</odoo>
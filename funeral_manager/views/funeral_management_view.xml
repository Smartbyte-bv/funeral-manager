<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="funeral_management_form_view" model="ir.ui.view">
            <field name="name">funeral.management.form</field>
            <field name="model">funeral.management</field>
            <field name="arch" type="xml">
                <form string="Funeral Management">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" required="1"/>
                                <field name="phone" required="1"/>
                                <field name="email" required="1"/>
                            </group>
                            <group>
                                <field name="dob"/>
                                <field name="request_date"/>
                                <field name="responsible_service" required="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="service_type_id" required="1"/>
                        </group>
                        <notebook>
                            <page string="Services">
                                <group>
                                    <field name="funeral_service_line_id" nolabel="1">
                                        <tree string="Service Line" editable="bottom" create="0" delete="0">
                                            <field name="description" force_save="1"/>
                                            <field name="qty" force_save="1"/>
                                            <field name="depend_selling_price" force_save="1" invisible="1"/>
                                            <field name="price" force_save="1" string="Price"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <field name="product_variant_one" nolabel="1">
                                        <tree editable="bottom" create="0" delete="0">
                                            <field name="product_id" string="Product"/>
                                            <field name="variant_id"/>
                                            <field name="depend_selling_price" force_save="1" invisible="1"/>
                                            <field name="qty"/>
                                            <field name="price"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <field name="product_variant_two" nolabel="1">
                                        <tree editable="bottom" create="0" delete="0">
                                            <field name="product_id" string="Product"/>
                                            <field name="variant_id"/>
                                            <field name="depend_selling_price" force_save="1" invisible="1"/>
                                            <field name="qty"/>
                                            <field name="price"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <field name="product_variant_three" nolabel="1">
                                        <tree editable="bottom" create="0" delete="0">
                                            <field name="product_id" string="Product"/>
                                            <field name="variant_id"/>
                                            <field name="depend_selling_price" force_save="1" invisible="1"/>
                                            <field name="qty"/>
                                            <field name="price"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <group>
                                        <field name="supplement_out_of_hours"/>
                                    </group>
<!--
                                    <group>
                                        <field name="variant_selection_1" string="Variant Selection"/>
                                        <field name="variant_selection_2" string="Variant Selection"/>
                                        <field name="service_variant_id" string="Variant Selection"/>
                                        <field name="product_product_1" string="Variant Selection"/>
                                        <field name="product_product_2_price" string="Price"/>
                                        <field name="product_product_2" string="Variant Selection"/>
                                        <field name="product_product_2_price" string="Price"/>
                                        <field name="product_product_3" string="Variant Selection"/>
                                        <field name="product_product_3_price" string="Price"/>
                                    </group>
-->
                                </group>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed" sum="Untaxed amount"/>
                                    <field name="amount_tax"/>
                                    <field name="amount_total" sum="Total amount"
                                           class="oe_subtotal_footer_separator"/>
                                </group>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="funeral_management_tree_view" model="ir.ui.view">
            <field name="name">funeral.management.tree</field>
            <field name="model">funeral.management</field>
            <field name="arch" type="xml">
                <tree string="Funeral Management">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="dob"/>
                    <field name="request_date"/>
                    <field name="responsible_service"/>
                </tree>
            </field>
        </record>


        <record id="funeral_management_act_window" model="ir.actions.act_window">
            <field name="name">Funeral Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">funeral.management</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Funeral Management" id="funeral_management_menu"/>
        <menuitem name="Funerals" id="funerals_menu" parent="funeral_management_menu"
                  action="funeral_management_act_window"/>

    </data>
</odoo>